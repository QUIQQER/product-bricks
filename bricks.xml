<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- Product Slider -->
        <brick control="\QUI\ProductBricks\Controls\Slider\ProductSlider">
            <title>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.productSlider.title"/>
            </title>
            <description>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.productSlider.description"/>
            </description>

            <settings>

                <setting name="showPrice" type="checkbox">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.settings.showPrice"/>
                </setting>
                <setting name="autostart" type="checkbox">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.settings.autostart"/>
                </setting>
                <setting name="delay" type="number">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.settings.delay"/>
                </setting>

                <setting name="bgColor" type="color">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.bgColor" />
                </setting>

                <setting name="bgImage" type="text" class="media-image">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.bgImage" />
                </setting>

                <setting name="dotsAppearance" type="select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.dotsAppearance"/>

                    <option value="dark">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.productSlider.dotsAppearance.dark"/>
                    </option>
                    <option value="light">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.productSlider.dotsAppearance.light"/>
                    </option>
                </setting>

                <setting name="productIds" type="hidden"
                         data-qui="package/quiqqer/products/bin/controls/products/Select"
                >
                    <locale group="quiqqer/products" var="quiqqer.products.settings.productIds"/>
                </setting>

            </settings>
        </brick>

        <!-- Category Box -->
        <brick control="\QUI\ProductBricks\Controls\CategoryBox">
            <title>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.categoryBox.title"/>
            </title>
            <description>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.categoryBox.description"/>
            </description>

            <settings>

                <setting name="bgColor" type="color">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.categoryBox.bgColor" />
                </setting>

                <setting name="imageAsBackground" type="checkbox">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.categoryBox.imageAsBackground"/>
                </setting>

                <setting name="order" type="select">
                    <locale group="quiqqer/bricks" var="brick.control.setting.order"/>

                    <option value="name ASC">
                        <locale group="quiqqer/system" var="name_asc"/>
                    </option>
                    <option value="name DESC">
                        <locale group="quiqqer/system" var="name_desc"/>
                    </option>
                    <option value="title ASC">
                        <locale group="quiqqer/system" var="title_asc"/>
                    </option>
                    <option value="title DESC">
                        <locale group="quiqqer/system" var="title_desc"/>
                    </option>
                    <option value="c_date ASC">
                        <locale group="quiqqer/system" var="c_date_asc"/>
                    </option>
                    <option value="c_date DESC">
                        <locale group="quiqqer/system" var="c_date_desc"/>
                    </option>
                    <option value="e_date ASC">
                        <locale group="quiqqer/system" var="e_date_asc"/>
                    </option>
                    <option value="e_date DESC">
                        <locale group="quiqqer/system" var="e_date_desc"/>
                    </option>
                    <option value="release_from ASC">
                        <locale group="quiqqer/system" var="release_from_asc"/>
                    </option>
                    <option value="release_from DESC">
                        <locale group="quiqqer/system" var="release_from_desc"/>
                    </option>
                </setting>

                <setting name="site" type="hidden"
                         data-qui="controls/projects/project/site/Select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.categoryBox.categorySites"/>
                </setting>

                <setting name="allCategoriesUrl" class="project-site">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.categoryBox.allCategoriesUrl"/>
                </setting>


            </settings>
        </brick>

        <!-- Product Children Slider (horizontal) -->
        <brick control="\QUI\ProductBricks\Controls\Children\Slider">
            <title>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.productChildrenSlider.title"/>
            </title>
            <description>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.productChildrenSlider.description"/>
            </description>

            <settings>

                <setting name="hideRetailPrice" type="checkbox">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.settings.hideRetailPrice"/>
                </setting>

                <setting name="productIds" type="hidden"
                         data-qui="package/quiqqer/products/bin/controls/products/Select"
                >
                    <locale group="quiqqer/products" var="quiqqer.products.settings.productIds"/>
                </setting>

            </settings>
        </brick>

        <!-- Promo Box -->
        <brick control="\QUI\ProductBricks\Controls\PromoBox">
            <title>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.promoBox.title"/>
            </title>
            <description>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.promoBox.description"/>
            </description>

            <settings>
                <setting name="image" class="media-image" type="text">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBox.image" />
                </setting>

                <setting name="url" class="project-site" type="text">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBox.url"/>
                </setting>

                <setting name="target" type="select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBox.target"/>

                    <option value="_self">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBox.target.self"/>
                    </option>
                    <option value="_blank">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBox.target.blank"/>
                    </option>
                </setting>

                <setting name="contentPosition" type="select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBox.contentPosition"/>

                    <option value="flex-start">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBox.contentPosition.flexStart"/>
                    </option>
                    <option value="center">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBox.contentPosition.center"/>
                    </option>
                    <option value="flex-end">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBox.contentPosition.flexEnd"/>
                    </option>
                </setting>

                <setting name="minHeight" type="number">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBox.minHeight"/>
                </setting>

                <setting name="colorScheme" type="select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBox.colorScheme"/>

                    <option value="none">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBox.colorScheme.none"/>
                    </option>
                    <option value="light">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBox.colorScheme.light"/>
                    </option>
                    <option value="dark">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBox.colorScheme.dark"/>
                    </option>
                </setting>
            </settings>
        </brick>

        <!-- Promo Box: image next to the content -->
        <brick control="\QUI\ProductBricks\Controls\PromoBoxImageNextToContent">
            <title>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.promoBoxImageNextToContent.title"/>
            </title>
            <description>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.promoBoxImageNextToContent.description"/>
            </description>

            <settings>
                <setting name="image" class="media-image" type="text">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBoxImageNextToContent.image" />
                </setting>

                <setting name="backgroundColor" type="color">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBoxImageNextToContent.backgroundColor"/>
                </setting>

                <setting name="url" class="project-site" type="text">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBoxImageNextToContent.url"/>
                </setting>

                <setting name="target" type="select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBoxImageNextToContent.target"/>

                    <option value="_self">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBoxImageNextToContent.target.self"/>
                    </option>
                    <option value="_blank">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBoxImageNextToContent.target.blank"/>
                    </option>
                </setting>

                <setting name="contentPosition" type="select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBoxImageNextToContent.contentPosition"/>

                    <option value="flex-start">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBoxImageNextToContent.contentPosition.flexStart"/>
                    </option>
                    <option value="center">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBoxImageNextToContent.contentPosition.center"/>
                    </option>
                    <option value="flex-end">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBoxImageNextToContent.contentPosition.flexEnd"/>
                    </option>
                </setting>

                <setting name="minHeight" type="number">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBoxImageNextToContent.minHeight"/>
                </setting>

                <setting name="layout" type="select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.promoBoxImageNextToContent.layout"/>

                    <option value="imageRight">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBoxImageNextToContent.layout.imageRight"/>
                    </option>
                    <option value="imageLeft">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.promoBoxImageNextToContent.layout.imageLeft"/>
                    </option>
                </setting>
            </settings>
        </brick>

        <!-- Featured Products Simple List -->
        <brick control="\QUI\ProductBricks\Controls\FeaturedProducts">
            <title>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.featuredProducts.title"/>
            </title>
            <description>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.featuredProducts.description"/>
            </description>

            <settings>

                <!-- Layout -->
                <setting name="layout" type="select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.featuredProducts.layout"/>

                    <option value="list">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.featuredProducts.layout.list"/>
                    </option>
                    <option value="gallery">
                        <locale group="quiqqer/product-bricks"
                                var="brick.control.featuredProducts.layout.gallery"/>
                    </option>
                </setting>

                <!-- Featured products 1 (box 3) -->
                <setting name="featured1.title" type="text">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.featuredProducts.featured1.title"/>
                </setting>
                <setting name="featured1.categoryId" type="hidden"
                         data-qui="package/quiqqer/products/bin/controls/categories/Select"
                         data-qui-options-max="1"
                >
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.featuredProducts.featured1.categoryId"/>
                </setting>

                <!-- Featured products 2 (box 3) -->
                <setting name="featured2.title" type="text">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.featuredProducts.featured2.title"/>
                </setting>
                <setting name="featured2.categoryId" type="hidden"
                         data-qui="package/quiqqer/products/bin/controls/categories/Select"
                         data-qui-options-max="1"
                >
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.featuredProducts.featured2.categoryId"/>
                </setting>

                <!-- Featured products 3 (box 3) -->
                <setting name="featured3.title" type="text">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.featuredProducts.featured3.title"/>
                </setting>
                <setting name="featured3.categoryId" type="hidden"
                         data-qui="package/quiqqer/products/bin/controls/categories/Select"
                         data-qui-options-max="1"
                >
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.featuredProducts.featured3.categoryId"/>
                </setting>

                <setting name="limit" type="number">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.featuredProducts.limit"/>
                </setting>

                <setting name="order" type="select">
                    <locale group="quiqqer/product-bricks"
                            var="sort"/>

                    <option value=""/>
                    <option value="priority">
                        <locale group="quiqqer/product-bricks"
                                var="sort.sorting"/>
                    </option>
                    <option value="c_date ASC">
                        <locale group="quiqqer/product-bricks"
                                var="sort.cdate.ASC"/>
                    </option>
                    <option value="c_date DESC">
                        <locale group="quiqqer/product-bricks"
                                var="sort.cdate.DESC"/>
                    </option>

                    <option value="title ASC">
                        <locale group="quiqqer/product-bricks"
                                var="sort.title.ASC"/>
                    </option>
                    <option value="title DESC">
                        <locale group="quiqqer/product-bricks"
                                var="sort.title.DESC"/>
                    </option>

                    <option value="productNo ASC">
                        <locale group="quiqqer/product-bricks"
                                var="sort.productNo.ASC"/>
                    </option>
                    <option value="productNo DESC">
                        <locale group="quiqqer/product-bricks"
                                var="sort.productNo.DESC"/>
                    </option>
                </setting>
            </settings>
        </brick>

    </bricks>
</quiqqer>