<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- Product Slider -->
        <brick control="\QUI\ProductBricks\Controls\Slider\ProductSlider">
            <title>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.productSlider.title"/>
            </title>
            <description>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.productSlider.description"/>
            </description>

            <settings>

                <setting name="autostart" type="checkbox">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.settings.autostart"/>
                </setting>
                <setting name="delay" type="number">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.settings.delay"/>
                </setting>

                <setting name="bgColor" type="color">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.bgColor" />
                </setting>

                <setting name="bgImage" type="text" class="media-image">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.bgImage" />
                </setting>

                <setting name="productIds" type="hidden"
                       data-qui="package/quiqqer/products/bin/controls/products/Select"
                >
                        <locale group="quiqqer/products" var="quiqqer.products.settings.productIds"/>
                </setting>

            </settings>
        </brick>

    </bricks>
</quiqqer>