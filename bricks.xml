<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- Product Slider -->
        <brick control="\QUI\ProductBricks\Controls\Slider\ProductSlider">
            <title>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.productSlider.title"/>
            </title>
            <description>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.productSlider.description"/>
            </description>

            <settings>

                <setting name="autostart" type="checkbox">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.settings.autostart"/>
                </setting>
                <setting name="delay" type="number">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.settings.delay"/>
                </setting>

                <setting name="bgColor" type="color">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.bgColor" />
                </setting>

                <setting name="bgImage" type="text" class="media-image">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.productSlider.bgImage" />
                </setting>

                <setting name="productIds" type="hidden"
                       data-qui="package/quiqqer/products/bin/controls/products/Select"
                >
                        <locale group="quiqqer/products" var="quiqqer.products.settings.productIds"/>
                </setting>

            </settings>
        </brick>

        <!-- Category Box -->
        <brick control="\QUI\ProductBricks\Controls\CategoryBox">
            <title>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.categoryBox.title"/>
            </title>
            <description>
                <locale group="quiqqer/product-bricks"
                        var="brick.control.categoryBox.description"/>
            </description>

            <settings>

                <setting name="bgColor" type="color">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.categoryBox.bgColor" />
                </setting>

                <setting name="imageAsBackground" type="checkbox">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.categoryBox.imageAsBackground"/>
                </setting>

                <setting name="order" type="select">
                    <locale group="quiqqer/bricks" var="brick.control.setting.order"/>

                    <option value="name ASC">
                        <locale group="quiqqer/system" var="name_asc"/>
                    </option>
                    <option value="name DESC">
                        <locale group="quiqqer/system" var="name_desc"/>
                    </option>
                    <option value="title ASC">
                        <locale group="quiqqer/system" var="title_asc"/>
                    </option>
                    <option value="title DESC">
                        <locale group="quiqqer/system" var="title_desc"/>
                    </option>
                    <option value="c_date ASC">
                        <locale group="quiqqer/system" var="c_date_asc"/>
                    </option>
                    <option value="c_date DESC">
                        <locale group="quiqqer/system" var="c_date_desc"/>
                    </option>
                    <option value="e_date ASC">
                        <locale group="quiqqer/system" var="e_date_asc"/>
                    </option>
                    <option value="e_date DESC">
                        <locale group="quiqqer/system" var="e_date_desc"/>
                    </option>
                    <option value="release_from ASC">
                        <locale group="quiqqer/system" var="release_from_asc"/>
                    </option>
                    <option value="release_from DESC">
                        <locale group="quiqqer/system" var="release_from_desc"/>
                    </option>
                </setting>

                <setting name="site" type="hidden"
                         data-qui="controls/projects/project/site/Select">
                    <locale group="quiqqer/product-bricks"
                            var="brick.control.categoryBox.categorySites"/>
                </setting>

            </settings>
        </brick>

    </bricks>
</quiqqer>